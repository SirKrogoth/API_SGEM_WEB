@model SGEM_WEB_SITE.Areas.Item.Models.ItemObj;


@{
    ViewData["Title"] = "SGEM - Cadastro de Item";
}

<script>
    function somenteNumeros(num)
    {
        var er = /[^0-9.,]/;
        er.lastIndex = 0;
        var campo = num;
        if (er.test(campo.value))
        {
            campo.value = "";
        }
    }
</script>


<form method="post" class="col-6 center" style="margin-top: 5%" action="">

    @if (TempData["MSG_SUCESSO"] != null)
    {
        <p class="alert alert-success">@TempData["MSG_SUCESSO"].ToString()</p>
    }
    else if (TempData["MSG_ERRO"] != null)
    {
        <p class="alert alert-danger">@TempData["MSG_ERRO"].ToString()</p>
    }

    <h2>Cadastro de Itens</h2>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" name="Codigo" class="form-control col-4" placeholder="0" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Descricao" for="Descricao">Digite aqui uma breve descrição do Item</label>
        <input asp-for="Descricao" name="Descricao" class="form-control" placeholder="Descrição do Item" maxlength="100" id="Descricao" required />
    </div>

    <div class="form-group">
        <label asp-for="Estoque">Qual é a quantidade que você o possui em estoque?</label>
        <input asp-for="Estoque" onkeyup="somenteNumeros(this);" name="Estoque" class="form-control col-4" placeholder="Estoque" required />
    </div>
    
    <div class="form-group">
        <label asp-for="Preco">Qual é o preço para locação por unidade?</label>
        <input asp-for="Preco" onkeyup="somenteNumeros(this);" name="Preco" class="form-control col-4" placeholder="Preço" required />
    </div>
    <div class="form-group">
        <label asp-for="Ativo">Situação atual do Item</label>
        <select asp-for="Ativo" name="Ativo" class="form-control col-4">
            <option value="True" selected>Ativo</option>
            <option value="False">Inativo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar Item</button>
</form>